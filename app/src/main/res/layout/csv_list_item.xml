<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_student_name"
        android:text = "NAME"
        android:textColor="@color/myBlack"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_student_email"
        android:text = "EMAIL"
        android:layout_below="@id/list_student_name"
        android:textColor="@color/myBlack"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_student_email"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_grade_date"
            android:text = "@string/label_list_grade"
            android:textColor="@color/myBlack"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info_grade_date"
            android:text = "10,00 (10-10-2017)"
            android:textColor="@color/myBlack"
            />
    </LinearLayout>



</RelativeLayout>